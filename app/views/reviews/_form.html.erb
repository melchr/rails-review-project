<%= form_for :review, url: album_reviews_path(@album.id), :method => :post do |f| %> 
<% if @review.errors.any? %>
<ul>
  <% @review.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
      <%= f.label :title %>
      <%= f.text_field :title%>
            <br>
      <%= f.label :date %>
      <%= f.date_field :date%>
            <br>
      <%= f.label :content %>
      <%= f.text_area :content %>
      <%= f.hidden_field :album_id, value: @album.id %>
            <br>
      <%= f.submit "Submit" %>
<% end %>