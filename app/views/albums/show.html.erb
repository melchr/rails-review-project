<% if @album.avatar.attached? %>
    <image src="<%=(url_for(@album.avatar))%>%" style="width:350px;height:350px;">
<% end %>
<br>
<%= @album.artist %> -
<%= @album.title %>
<br>
<%= link_to "Edit Album", edit_album_path(@album) %>
<%= link_to 'Delete Album', album_path(@album), method: :delete %>
<br><br><br>
Write a Review for <%= @album.title %> by <%= @album.artist %> here:
<%= render '/reviews/form' if logged_in? %>
<br><br><br>
<h2>Reviews for this album:</h2><br>
<% if @user.reviews == !nil? %>
<% @album.reviews.each do |review| %>
    <small>Date written: <%= review.date %></small><br>
    <small>Written by: <%= review.user.name %></small><br>
    <strong>Title: <%= review.title %></strong><br>
    Review: <%= review.content %><br><br>
    <!-- by <%= current_user.name %> need to change this to that reviews user -->
<% end %>
<% end %>

<br><br><br><br><br><br>
<%= link_to "View All Reviews", reviews_path %><br>
<%= link_to "All Albums", albums_path %><br>
<%= link_to "Upload a New Album", new_album_path %>